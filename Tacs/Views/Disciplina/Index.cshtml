@model Tacs.ViewModels.Disciplina.VMIndexDisciplina
@{
    ViewBag.Title = "Disciplinas";
}

<div class="row-fluid">
    <div class="span12">
        <h1>Disciplinas</h1>
        <div>
            @Html.ActionLink("Adicionar disciplina", "Create", null, new { @class = "btn btn-info" })
            <br />
            <br />
        </div>
        <div>
            <table class="table table-striped table_tacs">
                <thead>
                    <tr>
                        <td>Disciplina</td>
                        <td>Ações</td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Disciplinas.Count == 0)
                    {
                        <tr>
                            <td>Nenhuma disciplina cadastrada</td>
                            <td></td>
                        </tr>
                    }
                    else
                    {
                        foreach (var m in Model.Disciplinas)
                        {
                            <tr>
                                <td>@m.Nome</td>
                                <td>@Html.ActionLink("Editar", "Edit", new { id = m.Id })</td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
        
    </div>
</div>