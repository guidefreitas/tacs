@model Tacs.ViewModels.Teste.VMCreateEditTeste

<div class="panel">
    <div class="panel-heading">
        <h1 class="panel-title">Teste</h1>
    </div>

    <div class="panel-body">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-5">
                @Html.TacsDropDownListFor(model => model.DisciplinaId, new SelectList(Model.Disciplinas, "Id", "Nome", Model.DisciplinaId), i18n.T("GeralSelecioneOpcao"))
            </div>
        </div>

        <div class="row">
            <div class="col-sm-5">
                @Html.TacsTextBoxFor(m => m.DataInicioValidade)
            </div>
        </div>

        <div class="row">
            <div class="col-sm-5">
                @Html.TacsTextBoxFor(m => m.DataFimValidade)
            </div>
        </div>

        <div class="row">
            <div class="col-sm-5">
                @Html.TacsEnumDropDownFor(m => m.CriterioInicio, "Selecione um item", new { @class = "btn btn-default dropdown-toggle" })
            </div>
        </div>

        <div class="row">
            <div class="col-sm-5">
                @Html.TacsEnumDropDownFor(m => m.CriterioFinalizacao, "Selecione um item", new { @class = "btn btn-default dropdown-toggle" })
            </div>
        </div>

        <div class="row">
            <div class="col-sm-5">
                @Html.TacsEnumDropDownFor(m => m.CriterioEscolhaQuestao, "Selecione um item", new { @class = "btn btn-default dropdown-toggle" })
            </div>
        </div>

        @if (Model.Id != 0)
        {
            <div class="row">
                <div class="col-sm-12">
                    <h3>Assuntos</h3>
                    @Html.ActionLink("Adicionar assunto", "AddAssunto", new { id = Model.Id }, new { @class = "btn btn-success" })
                    <br />
                    <br />
                    <div id="table_assuntos">
                        @Html.Partial("_TabelaAssuntos", Model)
                    </div>
                    
                </div>
            </div>

            <br />
            <br />

            <div class="row">
                <div class="col-sm-12">
                    <h3>Respostas</h3>
                    <br />
                    @Html.Partial("_TabelaItens", Model)
                </div>
            </div> 
        }
        

    <div class="panel-footer">
        @Html.TacsSubmitButton("Salvar", new { @class = "btn btn-success" })
        @if (Model.Id != 0)
        {
            <button name="X-HTTP-Method-Override" value="DELETE" formnovalidate
                    class="btn btn-danger" onclick="return confirm('Tem certeza que deseja apagar?')">
                Apagar
            </button>
        }
        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
    </div>
</div>
